[flake8]
max-line-length = 88
max-doc-length = 88
extend-ignore = E501
extend-select = B950
extend-exclude = 
    .dvc,
    .pytest_cache,
    .vscode,
    data,
    env,
    great_expectations,
    info,
    mlruns,
    notebooks,
    .ipynb_checkpoints,
    pyttmp,
    tmp
statistics = True
count = True
max-complexity = 15
require-plugins = flake8-bugbear